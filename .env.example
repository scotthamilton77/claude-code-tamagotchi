# Pet Basic Settings
PET_NAME=Buddy
PET_TYPE=dog  # dog, cat, dragon, robot

# Statusline Components (all optional, default: enabled)
# Set to 'false' to disable any component

PET_SHOW_PET=true              # Show the pet character and mood
PET_SHOW_STATS=true            # Show pet vital stats (hunger, energy, etc.)
PET_SHOW_TOKENS=true           # Show token usage and context percentage
PET_SHOW_GIT_BRANCH=true       # Show current git branch with color coding
PET_SHOW_COST=true             # Show session cost in USD
PET_SHOW_DURATION=true         # Show response duration
PET_SHOW_DIRECTORY=true        # Show current directory name
PET_SHOW_MODEL=true            # Show Claude model name
PET_SHOW_THOUGHTS=true         # Show pet thoughts and system messages

# Token Tracking Settings
PET_TOKEN_THRESHOLD=400000     # Context window threshold (400K = 80% of 500K)
PET_TOKEN_ESTIMATE_RATIO=4.0   # Characters per token ratio for estimation

# Debug Settings
DEBUG_MODE=false
ENABLE_LOGGING=false

# AI Feedback System (Optional)
PET_FEEDBACK_ENABLED=false
PET_GROQ_API_KEY=your-api-key-here